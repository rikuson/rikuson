---
export interface Props {
  date: Date | string;
}

const { date } = Astro.props;

const dateObj = typeof date === 'string' ? new Date(date) : date;
const formattedDate = dateObj.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<time datetime={dateObj.toISOString()}>
  {formattedDate}
</time>